{
  "compilerOptions": {
    "useDefineForClassFields": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "es6",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
